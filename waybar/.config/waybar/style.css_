@import "/home/theshanumalik/.cache/wal/colors-waybar.css"; 

@define-color crust        @background;
@define-color overlay0     @foreground;
@define-color overlay1     @color8;
@define-color mauve        @color5;
@define-color rosewater    @color2;
@define-color maroon       @color1;
@define-color blue         @color4;
@define-color yellow       @color3;
@define-color lavender     @color6;
@define-color red          @color1;
@define-color green        @color10;


* {
    font-family: "MesloLGS Nerd Font Mono Bold";
    font-size: 14px;
    min-height: 0;
}

window#waybar {
    background: transparent;
    color: @overlay0;
    transition-property: background-color;
    transition-duration: 0.1s;
    border-bottom: 0.2px solid @overlay1;
}

