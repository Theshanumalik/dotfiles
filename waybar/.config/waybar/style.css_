#window {
    margin: 8px;
    padding-left: 8;
    padding-right: 8;
}

button {
    box-shadow: inset 0 -3px transparent;
    border: none;
    border-radius: 0;
    color: @foreground;
}

button:hover {
    background: inherit;
    border-top: 2px solid @foreground;
}

#workspaces button {
    padding: 0 4px;
}

#workspaces button.focused {
    background-color: rgba(0, 0, 0, 0.3);
    border-top: 2px solid @foreground;
}

#workspaces button.active {
    background-color: rgba(0, 0, 0, 0.3);
    border-top: 2px solid @foreground;
}

#workspaces button.urgent {
    background-color: #eb4d4b;
}

#pulseaudio,
#clock,
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#wireplumber,
#tray,
#network,
#custom-brightness,
#custom-notification,
#custom-power,
#mode,
#scratchpad {
  margin-top: 2px;
  margin-bottom: 2px;
  margin-left: 4px;
  margin-right: 4px;
  padding-left: 10px;
  padding-right: 10px;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 15px;
}

#custom-notification {
  font-family: "NotoSansMono Nerd Font";
}

#custom-power {
  font-size: 16px;
}

